{
	"info": {
		"_postman_id": "fitness-tracker-users-api",
		"name": "FitnessTracker - Users API",
		"description": "Collection of API endpoints for user management operations in FitnessTracker application",
		"schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
	},
	"item": [
		{
			"name": "Get All Users (Basic Info)",
			"request": {
				"method": "GET",
				"header": [],
				"url": {
					"raw": "{{baseUrl}}/v1/users",
					"host": [
						"{{baseUrl}}"
					],
					"path": [
						"v1",
						"users"
					]
				},
				"description": "Retrieves a list of all users with basic information (ID, firstName, lastName only)"
			},
			"response": []
		},
		{
			"name": "Get User by ID",
			"request": {
				"method": "GET",
				"header": [],
				"url": {
					"raw": "{{baseUrl}}/v1/users/1",
					"host": [
						"{{baseUrl}}"
					],
					"path": [
						"v1",
						"users",
						"1"
					]
				},
				"description": "Retrieves detailed information about a user by ID"
			},
			"response": []
		},
		{
			"name": "Get User by Email",
			"request": {
				"method": "GET",
				"header": [],
				"url": {
					"raw": "{{baseUrl}}/v1/users/search/by-email?email=Emma.Johnson@domain.com",
					"host": [
						"{{baseUrl}}"
					],
					"path": [
						"v1",
						"users",
						"search",
						"by-email"
					],
					"query": [
						{
							"key": "email",
							"value": "Emma.Johnson@domain.com"
						}
					]
				},
				"description": "Retrieves a user by email address"
			},
			"response": []
		},
		{
			"name": "Get User by Name",
			"request": {
				"method": "GET",
				"header": [],
				"url": {
					"raw": "{{baseUrl}}/v1/users/search/by-name?firstName=Emma&lastName=Johnson",
					"host": [
						"{{baseUrl}}"
					],
					"path": [
						"v1",
						"users",
						"search",
						"by-name"
					],
					"query": [
						{
							"key": "firstName",
							"value": "Emma"
						},
						{
							"key": "lastName",
							"value": "Johnson"
						}
					]
				},
				"description": "Retrieves a user by first name and last name"
			},
			"response": []
		},
		{
			"name": "Search Users by Email Fragment",
			"request": {
				"method": "GET",
				"header": [],
				"url": {
					"raw": "{{baseUrl}}/v1/users/search/email?emailFragment=johnson",
					"host": [
						"{{baseUrl}}"
					],
					"path": [
						"v1",
						"users",
						"search",
						"email"
					],
					"query": [
						{
							"key": "emailFragment",
							"value": "johnson",
							"description": "Case-insensitive partial match"
						}
					]
				},
				"description": "Searches users by email fragment (case-insensitive, partial match). Returns only ID and email."
			},
			"response": []
		},
		{
			"name": "Search Users by Age",
			"request": {
				"method": "GET",
				"header": [],
				"url": {
					"raw": "{{baseUrl}}/v1/users/search/age?ageMin=30",
					"host": [
						"{{baseUrl}}"
					],
					"path": [
						"v1",
						"users",
						"search",
						"age"
					],
					"query": [
						{
							"key": "ageMin",
							"value": "30",
							"description": "Minimum age (exclusive)"
						}
					]
				},
				"description": "Searches users older than the specified age"
			},
			"response": []
		},
		{
			"name": "Create User",
			"request": {
				"method": "POST",
				"header": [
					{
						"key": "Content-Type",
						"value": "application/json"
					}
				],
				"body": {
					"mode": "raw",
					"raw": "{\n    \"firstName\": \"John\",\n    \"lastName\": \"Doe\",\n    \"birthdate\": \"1990-01-15\",\n    \"email\": \"john.doe@example.com\"\n}"
				},
				"url": {
					"raw": "{{baseUrl}}/v1/users",
					"host": [
						"{{baseUrl}}"
					],
					"path": [
						"v1",
						"users"
					]
				},
				"description": "Creates a new user"
			},
			"response": []
		},
		{
			"name": "Update User",
			"request": {
				"method": "PUT",
				"header": [
					{
						"key": "Content-Type",
						"value": "application/json"
					}
				],
				"body": {
					"mode": "raw",
					"raw": "{\n    \"firstName\": \"Jane\",\n    \"lastName\": \"Smith\",\n    \"birthdate\": \"1992-05-20\",\n    \"email\": \"jane.smith@example.com\"\n}"
				},
				"url": {
					"raw": "{{baseUrl}}/v1/users/1",
					"host": [
						"{{baseUrl}}"
					],
					"path": [
						"v1",
						"users",
						"1"
					]
				},
				"description": "Updates an existing user. Only provided fields will be updated; null fields remain unchanged."
			},
			"response": []
		},
		{
			"name": "Update User (Partial)",
			"request": {
				"method": "PUT",
				"header": [
					{
						"key": "Content-Type",
						"value": "application/json"
					}
				],
				"body": {
					"mode": "raw",
					"raw": "{\n    \"firstName\": \"UpdatedName\"\n}"
				},
				"url": {
					"raw": "{{baseUrl}}/v1/users/1",
					"host": [
						"{{baseUrl}}"
					],
					"path": [
						"v1",
						"users",
						"1"
					]
				},
				"description": "Partially updates a user - only firstName is updated, other fields remain unchanged"
			},
			"response": []
		},
		{
			"name": "Delete User",
			"request": {
				"method": "DELETE",
				"header": [],
				"url": {
					"raw": "{{baseUrl}}/v1/users/1",
					"host": [
						"{{baseUrl}}"
					],
					"path": [
						"v1",
						"users",
						"1"
					]
				},
				"description": "Deletes a user by ID"
			},
			"response": []
		}
	],
	"variable": [
		{
			"key": "baseUrl",
			"value": "http://localhost:8080",
			"type": "string"
		}
	]
}

